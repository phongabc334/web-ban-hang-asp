@model MyPham.Models.TaiKhoan

@{
    ViewBag.Title = "ThongTinTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main" class="row d-flex justify-content-center align-items-center">
    <div class="col-md-6 mt-5">
        <h2>Thông tin tài khoản</h2>
        <form class="pt-3">
            <div class="form-group row">
                <div class="col-md-4">Ảnh</div>
                <div class="col-md-8">
                    @{
                        string image = "~/wwwroot/images/user/" + Model.Anh;
                    }
                    @if (Session["Anh"] != null)
                    {
                        <img width="180" id="output" height="120" class="cart-img-icon" alt="Đăng nhập" src="@Url.Content(image)" />
                    }
                    else
                    {
                        <img width="180" id="output" height="120" class="cart-img-icon" alt="Đăng nhập" src="~/wwwroot/images/user/user.png" />
                    }
                </div>
            </div>
            <div class="form-group row ">
                <div class="col-md-4">Họ tên</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.HoTen)</div>
            </div>
            <div class="form-group row ">
                <div class="col-md-4 ">Email</div>
                <div class="col-md-8">@Html.DisplayFor(model => model.Email)</div>
            </div>

            <div class="form-group row ">
                <div class="col-md-4 ">Số điện thoại</div>
                <div class="col-md-8 ">@Html.DisplayFor(model => model.SoDienThoai)</div>
            </div>
            <div class="form-group row ">
                <div class="col-md-4 ">Địa chỉ</div>
                <div class="col-md-8 ">@Html.DisplayFor(model => model.DiaChi)</div>
            </div>
            <div class="mt-1 d-flex justify-content-center align-items-center">
                @{
                    string link = "/TaiKhoan/SuaTaiKhoan/" + Model.MaTK;
                    string linkHoaDon = "/GioHang/XemHoaDon/" + Model.MaTK;
                }
                <a href="@Url.Content(link)" style="background-color: #326e51;color:white" class="btn btn-lg font-weight-medium auth-form-btn mr-5">Sửa Tài Khoản</a>
                <a href="@Url.Content(linkHoaDon)" style="background-color: #326e51;;color:white" class="btn btn-lg font-weight-medium auth-form-btn">Đơn Mua</a>

            </div>

        </form>

    </div>


</main>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="../../vendors/base/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- inject:js -->
<script src="../../js/off-canvas.js"></script>
<script src="../../js/hoverable-collapse.js"></script>
<script src="../../js/template.js"></script>

