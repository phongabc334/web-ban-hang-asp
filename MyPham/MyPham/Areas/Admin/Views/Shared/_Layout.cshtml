
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Areas/Admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link rel="stylesheet" href="~/Areas/Admin/assets/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/flatsome2916.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Areas/Admin/assets/images/favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    
    @*<script type='text/javascript' src='~/wwwroot/js/frontend/woocommerce.min287d.js?ver=4.8.0' id='woocommerce-js'></script>*@

    <style>
        label {
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="navbar-brand-wrapper d-flex justify-content-center">
                <div class="navbar-brand-inner-wrapper d-flex justify-content-between align-items-center w-100">
                    <a class="navbar-brand brand-logo" href="@Url.Action("Index","Home")">
                        <img src="https://lamdepz.com/wp-content/uploads/2021/03/logo-full-1.png" alt="logo" />
                    </a>
                    <a class="navbar-brand brand-logo-mini" href="@Url.Action("Index","Home")">
                        <img src="https://lamdepz.com/wp-content/uploads/2021/03/logo-full-1.png" alt="logo" />
                    </a>

                </div>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">

                <ul class="navbar-nav navbar-nav-right">

                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
                            @{
                                string img = "~/wwwroot/images/user/" + Session["AnhAdmin"];
                            }
                            <img src="@Url.Content(img)"
                                 alt="profile" />
                            <span class="nav-profile-name">@Session["HoTenAdmin"]</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
                            <!-- <a class="dropdown-item">
                              <i class="mdi mdi-settings text-primary"></i>
                              Settings
                            </a> -->
                            <a href="@Url.Action("DangXuat","DangNhap")" class="dropdown-item" title="Đăng xuất">
                                <i class="mdi mdi-logout text-primary"></i>
                                Đăng xuất
                            </a>

                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button"
                        data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">

                    <li class="@(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()=="Home" ? "nav-item":"")">
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <i class="mdi mdi-view-dashboard mr-2"></i>
                            <span class="menu-title">Bảng Điều Khiển</span>
                        </a>
                    </li>
                    <li class="@(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()=="SanPhams" ? "nav-item":"")">
                        <a class="nav-link" href="@Url.Action("Index","SanPhams")">
                            <i class="mdi mdi-cube mr-2"></i>
                            <span class="menu-title">Quản Lý Sản Phẩm</span>
                        </a>
                    </li>
                    <li class="@(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()=="DanhMucSPs" ? "nav-item":"")">
                        <a class="nav-link" href="@Url.Action("Index","DanhMucSPs")">
                            <i class="mdi mdi-file-document-box  mr-2"></i>
                            <span class="menu-title">Quản Lý Danh Mục</span>
                        </a>
                    </li>
                    <li class="@(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()=="HoaDons" ? "nav-item":"")">
                        <a class="nav-link" href="@Url.Action("Index","HoaDons")">
                            <i class="mdi mdi-file-document  mr-2"></i>
                            <span class="menu-title">Quản Lý Hóa Đơn</span>
                        </a>
                    </li>
                    @if ((int)Session["LoaiAdmin"] == 1)
                    {
                    <li class="@(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString() == "TaiKhoans" ? "nav-item" : "")">
                        <a class="nav-link" href="@Url.Action("Index", "TaiKhoans")">
                            <i class="mdi mdi-account  mr-2"></i>
                            <span class="menu-title">Quản Lý Tài Khoản</span>
                        </a>
                    </li>}

                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                @RenderBody()
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2021-Haui</span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">
                            Nhóm sinh viên Trường Đại Học Công
                            Nghiệp Hà Nội<i class="mdi mdi-heart text-danger"></i>
                        </span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->

    <script src="~/Areas/Admin/assets/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/Areas/Admin/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Areas/Admin/assets/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/assets/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/Areas/Admin/assets/js/off-canvas.js"></script>
    <script src="~/Areas/Admin/assets/js/hoverable-collapse.js"></script>
    <script src="~/Areas/Admin/assets/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/Areas/Admin/assets/js/dashboard.js"></script>
    <script src="~/Areas/Admin/assets/js/data-table.js"></script>
    <script src="~/Areas/Admin/assets/js/jquery.dataTables.js"></script>
    <script src="~/Areas/Admin/assets/js/dataTables.bootstrap4.js"></script>
    <script type='text/javascript' src="~/Areas/Admin/assets/js/woocommerce.min287d.js?ver=4.8.0" id='woocommerce-js'></script>
    <!-- End custom js for this page-->
</body>

</html>